<div class="header">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <!-- Logo -->
                <div class="logo">
                    <h1>@Html.ActionLink(@Resources.Common.ApplicationName, "Index", "Dashboard", new { area = "MemberArea" }, new { })</h1>
                </div>
            </div>
            <div class="col-md-5">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Index", "Blogs", FormMethod.Get))
                        {
                            <div class="input-group form">
                                <input type="text" class="form-control" placeholder="Search..." name="blogName" value="@Request.Params["blogName"]">
                                <span class="input-group-btn">
                                    <input type="submit" class="btn btn-primary" value="Search"/>
                                </span>
                            </div>
                        }
                       
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="navbar navbar-inverse" role="banner">
                    <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                        @Html.Partial("~/Areas/MemberArea/Views/Shared/_LoginPartial.cshtml")
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>