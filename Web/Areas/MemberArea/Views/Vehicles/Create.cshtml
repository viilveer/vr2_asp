@model Web.Areas.MemberArea.ViewModels.Vehicle.CreateModel

@{
    ViewBag.Title = "Create";
}

<div class="col-md-6">
    <div class="content-box-large">
        <div class="panel-heading">
            <div class="panel-title">@Resources.Vehicles.CreateNew</div>

        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Year)

                    @Html.DropDownListFor(model => model.Year, new List<SelectListItem>(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Year)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Make)

                    @Html.DropDownListFor(model => model.Make, new List<SelectListItem>(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Make, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Make)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Model)
                    @Html.DropDownListFor(model => model.Model, new List<SelectListItem>(), null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Model)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Kw)
                    @Html.EditorFor(model => model.Kw, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Kw, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Engine)
                    @Html.EditorFor(model => model.Engine, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Engine, "", new { @class = "text-danger" })
                </div>


                <div>
                    <button type="submit" class="btn btn-primary">Add new vehicle</button>
                </div>
            }
        </div>
    </div>
</div>




<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("http://www.carqueryapi.com/js/carquery.0.3.4.js")
    @Scripts.Render("~/Scripts/App/vehicle.js")
}
