@using PagedList.Mvc
@using Web.Helpers
@model BLL.ViewModels.Vehicle.IndexModel

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="content-box-large">
    <div class="panel-heading">
        <div class="panel-title">@Resources.Vehicles.MyVehicles</div>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table">
                <tr>

                    <th>
                        <a href="@Url.Action("Index", new {SortProperty = GridViewHelper.GetSortProperty("_make", Model.SortProperty)})">
                            @Html.DisplayNameFor(model => model.Vehicles.FirstOrDefault().Make)
                            <i class="fa @GridViewHelper.GetSortIcon("_make", Model.SortProperty)"></i>
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("Index", new {SortProperty = GridViewHelper.GetSortProperty("_model", Model.SortProperty)})">
                            @Html.DisplayNameFor(model => model.Vehicles.FirstOrDefault().Model)
                            <i class="fa @GridViewHelper.GetSortIcon("_model", Model.SortProperty)"></i>
                        </a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vehicles.FirstOrDefault().Year)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vehicles.FirstOrDefault().Kw)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vehicles.FirstOrDefault().Engine)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vehicles.FirstOrDefault().CreateDateTime)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Vehicles)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Make)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Kw)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Engine)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDateTime)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                        </td>
                    </tr>
                }

            </table>
            @Html.PagedListPager(Model.Vehicles, page => Url.Action("Index", new { PageNumber = page }))
        </div>
    </div>
</div>
