@using Web.ViewModels
@model Web.ViewModels.LoginViewModel
@{
    ViewBag.Title = Resources.Account.Login_Title;
}


<div class="page-content container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-wrapper">
                @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    <div class="box">
                        <div class="content-wrap">
                            <h6>@Resources.Account.Login_UseLocalAccountToLogin</h6>
                            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = @Resources.Account.ViewModel_Email})
                            @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                            @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = @Resources.Account.ViewModel_Password })
                            @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})"

                                <div class="col-md-offset-2 col-md-10">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>

                            <div class="action">
                                <input type="submit" value="@Resources.Account.Login_ButtonLogin" class="btn btn-primary signup"/>
                            </div>
                        </div>
                    </div>
                }


                <div class="already">
                    <p>Don't have an account yet?</p>
                    @Html.ActionLink("Register as a new user", "Register")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}